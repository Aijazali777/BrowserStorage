@{
    ViewData["Title"] = "Session Storage";
}

<div class="container col-4">
    <div class="card shadow-sm m-5">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Session Storage</h3>
            <form id="SessionStorageForm" method="post">
                <div class="form-group mb-3">
                    <input id="Email" class="form-control" placeholder="Enter your email" />
                </div>
                <div class="d-flex justify-content-center mb-1">
                    <button type="button" onclick="SaveSessionStorage()" class="btn btn-primary">Save Data</button>
                </div>
                <div class="d-flex justify-content-center mb-1">
                    <button type="button" onclick="GetSessionStorage()" class="btn btn-primary">Get Data</button>
                </div>
                <div class="form-group mb-3">
                    <label id="LblEmail"></label>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function SaveSessionStorage() {
        // Session Storage setItem method
        var email = document.getElementById('Email').value;
        sessionStorage.setItem('Email', email);
    }

    function GetSessionStorage() {
        // Session Storage getItem method
        var email = sessionStorage.getItem('Email');
        document.getElementById('LblEmail').textContent = email;
    }
</script>
